<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teaching</title>
    <link rel="stylesheet" href="/css/teaching.css">
    <script src="https://kit.fontawesome.com/7065592652.js" crossorigin="anonymous"></script>
   
</head>
<body>
    <nav class="navbar">
        <p>Tessers</p>
        <div>
            <i id="createBtn" class="fa fa-plus"></i> 
        </div>
        
    </nav>
    <div id="showCreateBtns">
        <p id="joinRoom">Join Room</p>
        <p id="createRoom">Create Room</p>
        <p id="createPaidClass">Create Paid Class</p>
        <p id="createPrivateClass">Create Private Class</p>
    </div>
    <div id="joinRoomCont">
        <form id="joinForm" action="#">
            <input type="text" placeholder="room id">
            <button class="btn" id="joinBtn">Join</button>
        </form>
    </div>

    <div id="paidClassCont">
        <i class="fa fa-times fa-2x"></i>
    </div>
    <div id="privateClassCont">
        <i class="fa fa-times fa-2x"></i>
        <form class="classForm" id="privateClassForm">
            <div class="inputCont">
                <label for="className">Class Name</label>
                <input type="text" name="className" id="className">
            </div>
            <div class="inputCont">
                <label for="subName">Subject Name</label>
                <input type="text" name="subName" id="subName">
            </div>
            <div class="booleanCont">
                <p>Automated Attendance:</p>
                <input type="radio" name="takeAttendance" value="yes" id="attendanceYes">
                <label for="attendanceYes">yes</label>
                <input type="radio" name="takeAttendance" value="no" id="attendanceNo">
                <label for="attendanceNo">no</label>
            </div>
            <div class="booleanCont">
                <p>Restrict User (email):</p>
                <input type="radio" name="restrictUser" value="yes" id="restrictYes">
                <label for="restrictYes">yes</label>
                <input type="radio" name="restrictUser" value="no" id="restrictNo">
                <label for="restrictNo">no</label>
            </div>
            <button class="btn createClassBtn">Create</button>
        </form>
    </div>
    <div id="mainCont">
        <div id="sideBar">
            <h1>hbjhbj</h1>
        </div>
        <div id="classMainCont">
            <%var img =1;%>
            <%for(var i=0;i<classes.length;i++ ){%>
                
                <div class="classCont" style="background-image: url('/img/class/<%=img%>.jpg')">
                    <p class="className"><%= classes[i].className%></p>
                    <p class="subName"><%= classes[i].subName%></p>
                    <span>class Id: <p class="classId"><%= classes[i].classId%></p></span>
                </div>
                <%if(img>4){%>
                    <% img=1%>
                    <%}else{%>
                        <% img++%>
                        <%}%>
                
            <% }%>
            
            
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/teaching.js"></script>
</body>
</html>